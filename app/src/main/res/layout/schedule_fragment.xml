<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="April 2022" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/week_days_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/date_text_view"
        app:layout_constraintStart_toStartOf="@id/date_text_view"
        app:layout_constraintTop_toBottomOf="@id/date_text_view">

        <TextView
            android:id="@+id/mo_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/mo_week_day"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/tu_day_textview"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tu_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tu_week_day"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/mo_day_textview"
            app:layout_constraintEnd_toStartOf="@+id/we_day_textview"
            app:layout_constraintStart_toEndOf="@+id/mo_day_textview"
            app:layout_constraintTop_toTopOf="@+id/mo_day_textview" />

        <TextView
            android:id="@+id/we_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_week_day"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/mo_day_textview"
            app:layout_constraintEnd_toStartOf="@+id/th_day_textview"
            app:layout_constraintStart_toEndOf="@+id/tu_day_textview"
            app:layout_constraintTop_toTopOf="@+id/mo_day_textview" />

        <TextView
            android:id="@+id/th_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/th_week_day"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/mo_day_textview"
            app:layout_constraintEnd_toStartOf="@+id/fr_day_textview"
            app:layout_constraintStart_toEndOf="@+id/we_day_textview"
            app:layout_constraintTop_toTopOf="@+id/mo_day_textview" />

        <TextView
            android:id="@+id/fr_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fr_week_day"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/mo_day_textview"
            app:layout_constraintEnd_toStartOf="@+id/sa_day_textview"
            app:layout_constraintStart_toEndOf="@+id/th_day_textview"
            app:layout_constraintTop_toTopOf="@+id/mo_day_textview" />

        <TextView
            android:id="@+id/sa_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sa_week_day"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/mo_day_textview"
            app:layout_constraintEnd_toStartOf="@+id/su_day_textview"
            app:layout_constraintStart_toEndOf="@+id/fr_day_textview"
            app:layout_constraintTop_toTopOf="@+id/mo_day_textview" />

        <TextView
            android:id="@+id/su_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:text="@string/su_week_day"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/mo_day_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sa_day_textview"
            app:layout_constraintTop_toTopOf="@+id/mo_day_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintEnd_toEndOf="@+id/date_text_view"
        app:layout_constraintStart_toStartOf="@+id/date_text_view"
        app:layout_constraintTop_toBottomOf="@+id/week_days_layout"
        app:spanCount="7"
        tools:itemCount="42"
        tools:listitem="@layout/weekend_day_item" />

    <Button
        android:id="@+id/previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/previous_title_button"
        app:layout_constraintEnd_toStartOf="@+id/current_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view" />

    <Button
        android:id="@+id/current_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_title_button"
        app:layout_constraintBottom_toBottomOf="@+id/previous_button"
        app:layout_constraintEnd_toStartOf="@+id/next_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/previous_button"
        app:layout_constraintTop_toTopOf="@+id/previous_button" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_title_button"
        app:layout_constraintBottom_toBottomOf="@+id/previous_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/current_button"
        app:layout_constraintTop_toTopOf="@+id/previous_button" />

    <Button
        android:id="@+id/button_show_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/show_control_panel_title_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>