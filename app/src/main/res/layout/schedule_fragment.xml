<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/two_in_two_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/two_in_two_day_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_in_two_date_text_view"
        app:spanCount="7"
        tools:itemCount="42"
        tools:listitem="@layout/weekend_day_item" />

    <Button
        android:id="@+id/two_in_two_previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_in_two_day_recycler_view" />

    <Button
        android:id="@+id/two_in_two_current_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current"
        app:layout_constraintEnd_toEndOf="@+id/two_in_two_previous_button"
        app:layout_constraintStart_toStartOf="@+id/two_in_two_previous_button"
        app:layout_constraintTop_toBottomOf="@+id/two_in_two_previous_button" />

    <Button
        android:id="@+id/two_in_two_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        app:layout_constraintEnd_toEndOf="@+id/two_in_two_previous_button"
        app:layout_constraintStart_toStartOf="@+id/two_in_two_previous_button"
        app:layout_constraintTop_toBottomOf="@+id/two_in_two_current_button" />

    <Button
        android:id="@+id/date_picker_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_in_two_next_button" />

    <Button
        android:id="@+id/schedule_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the schedule type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_picker_dialog" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/date_picker_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date_picker_dialog"
        app:layout_constraintTop_toTopOf="@+id/date_picker_dialog"
        tools:text="2022-2-21" />

    <TextView
        android:id="@+id/schedule_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/schedule_types"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/schedule_types"
        app:layout_constraintTop_toTopOf="@+id/schedule_types"
        tools:text="Default" />

</androidx.constraintlayout.widget.ConstraintLayout>