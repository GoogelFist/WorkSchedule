<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:theme="@style/Theme.WorkSchedule"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <Button
        android:id="@+id/schedule_type_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Schedule type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="8dp"
        tools:text="Schedule type" />

    <TextView
        android:id="@+id/schedule_type_text_view_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/schedule_type_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/schedule_type_button"
        app:layout_constraintTop_toTopOf="@+id/schedule_type_button"
        tools:text="Default" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/schedule_type_button"
        app:layout_constraintTop_toBottomOf="@+id/schedule_type_button" />

    <Button
        android:id="@+id/first_work_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="First work date"
        app:layout_constraintStart_toStartOf="@+id/schedule_type_button"
        app:layout_constraintTop_toBottomOf="@+id/divider_line"
        tools:text="First work date" />

    <TextView
        android:id="@+id/date_text_view_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/first_work_date_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/first_work_date_button"
        app:layout_constraintTop_toTopOf="@id/first_work_date_button"
        tools:text="2022-2-21" />


</androidx.constraintlayout.widget.ConstraintLayout>